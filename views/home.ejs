<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
    <title>Shayrana</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3 row row-cols-3">
        <% blogs.forEach(blog => { %>
            <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top p-1">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title%></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
         
        <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>